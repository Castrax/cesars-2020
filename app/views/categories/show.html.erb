<div class="container">
  <h1 class="category-title"><%= @category.title %><span class="points-title"> - <%= @category.points %> points</span></h1>
  <% if @category.answer == nil %>
    <div class="cards">
      <% @nominees.each do |nominee| %>
        <div class="card">
          <%= cl_image_tag nominee.photo.key, height: 373, width: 280, crop: :fill, class: 'photo-nominee' %>
          <div class="infos-nominee">
            <div class="left-infos">
              <div class="name">
                <%= nominee.name %>
              </div>
              <div class="real">
                <%= nominee.real %>
              </div>
            </div>
            <div class="select-button"></div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="vote-button">
      <%= link_to 'Vote', new_category_answer_path(@answer), class: 'vote-button-link' %>
    </div>
  <% else %>
    <div class="card-voted">
      <img src="" alt="">
      <div class="infos-voted">
        <div class="infos-title">
          <p>Tu as voté pour</p>
          <p><%= Nominee.find(@category.answer.nominee_id).name %></p>
        </div>
        <div class="infos-buttons">
          <%= link_to "Change ton vote",
                      category_answer_path(@category, @category.answer),
                      method: :delete,
                      data: { confirm: "Are you sure?" }, class: 'change-vote' %>
          <%= link_to "Vote pour la catégorie suivante", category_path(@category.id + 1)  %>
        </div>
      </div>
    </div>
  <% end %>
</div>





