<p id="notice"><%= notice %></p>

<p>
  <strong>Première catégorie:</strong>
  <%= @category.title %>
  <% if @category.answer == nil %>
    <%= simple_form_for [@category, @answer] do |f| %>
      <%= f.association :nominee, as: :radio_buttons %>
      <%= f.submit 'Vote !', class: 'btn btn-primary' %>
    <% end %>
  <% else %>
    <p>Tu as voté pour</p>
    <p><%= Nominee.find(@category.answer.nominee_id).name %></p>
    <p><%= link_to "Change ton vote",
            category_answer_path(@category, @category.answer),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
    <p><%= link_to "Vote pour la catégorie suivante", category_path(@category.id + 1)  %></p>
  <% end %>
</p>
