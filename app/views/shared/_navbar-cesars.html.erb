      <% else %>
        <div class="Navbar__Link">
          <%= link_to "Se connecter", new_user_session_path, class: 'nav-pages' %>
        </div>
        <div class="Navbar__Link">
           <%= link_to "S'inscrire", new_user_registration_path, class: 'nav-pages deco-pages' %>
