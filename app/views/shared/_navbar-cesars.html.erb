<div class="container">
  <div class="Navbar">
    <div class="Navbar__Link Navbar__Link-brand">
      <%= link_to :root do  %>
        <%= image_tag 'https://res.cloudinary.com/ddlesqeup/image/upload/v1582125476/logo_yeriqv.png' %>
      <% end %>
    </div>
    <div class="Navbar__Link Navbar__Link-toggle">
      <i class="fas fa-bars"></i>
