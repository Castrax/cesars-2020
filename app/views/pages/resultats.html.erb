<div class="container">
  <h1 class="category-title">Résultats finaux</h1>
  <% if Nominee.where(winner: true) == [] %>
    <div class="card-voted status">
      <div class="infos-voted">
        <div class="infos-title">
          <p class="label-infos-title">⏰ En attente des résultats des césars 2020 !</p>
          <p class="nominee-infos">Quand les résultats tomberont, check ci-dessous pour voir si tu as gagné ou perdu !</p>
        </div>
      </div>
    </div>
  <% else %>
    <div class="card-voted status">
      <div class="infos-voted">
        <div class="infos-title">
          <p class="label-infos-title">🎙 Ci-dessous les résultats des césars 2020 !</p>
          <p class="nominee-infos">Check ci-dessous pour voir si tu as gagné ou perdu !</p>
        </div>
      </div>
    </div>
    <div class="results-category">
      <p class="title-results-category">Résultats finaux</p>
      <table class="sortable-table">
        <tr>
          <th class="participants">Participants</th>
          <th class="numeric-sort">Score</th>
        </tr>
        <% @users.order(stock: :desc).each do |user| %>
          <tr>
            <td><%= user.prenom %> <%= user.nom %> </td>
              <% @stock = 0 %>
              <% @categories.each do |category| %>
                <% if user.answers.where(category_id: category.id)[0] == nil %>
                  <% @stock += 0 %>
                <% elsif user.answers.where(category_id: category.id)[0].nominee.winner == false || nil %>
                  <% @stock += 0 %>
                <% elsif user.answers.where(category_id: category.id)[0].nominee.winner %>
                  <% @stock += category.points %>
                <% end %>
              <% end %>
              <% user.stock = @stock %>
              <% user.save! %>
          <td><%= user.stock %></td>
        <% end %>
      </table>
    </div>
  <% end %>
</div>
